<%= render partial: "shared/usercard", locals: { user: @user} %>

<div class="container">
  <h3 style="margin: 5px;">Bio</h3>
  <div>
    <%= @user.bio %>
  </div>
</div>

<% @posts.each do |post|%>
  <%= render partial: "shared/postcard", locals: { post: post, user: @user} %>
<% end %>

<p style="margin-left: 3px;">
  <%= link_to "See all posts", user_posts_path(@user)  %>
</p>