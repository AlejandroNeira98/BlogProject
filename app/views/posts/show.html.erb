<h1> Post Page</h1>
<div>
  <div>
    <span>
      <%= @post.title %> by <%= @user.name%>
    </span>
    <span>
      <span >Comments: <%= post.comments_counter %></span>
      <span >Likes: <%= post.likes_counter %></span>
    </span>
  </div>
  <div>
    <%= post.text %>
  </div>
  <%= render partial: "shared/commentscard", locals: { comments: @comments}%>
</div>